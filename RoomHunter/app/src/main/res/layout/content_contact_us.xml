<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ContactUsActivity"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:nestedScrollingEnabled="false"
    android:outlineProvider="none"
    android:scrollIndicators="none"
    android:touchscreenBlocksFocus="false"
    android:paddingBottom="20dp"
    android:id="@+id/room_detail_scrollview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/contact_us_imageview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Room Hunter \nHelping You Find Your Perfect Place"
                android:id="@+id/textView21"
                android:gravity="center"
                android:textColor="#d5ffffff"
                android:layout_gravity="bottom"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:background="#60070707"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:paddingTop="50dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@drawable/border_bottom_top"
            android:weightSum="1"
            android:gravity="center|center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:id="@+id/contact_us_llayout1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView3"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="75dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="7dp"
                        android:src="@mipmap/ic_phone1" />

                    <TextView
                        android:id="@+id/contact_us_call1_textview"
                        android:layout_width="329dp"
                        android:layout_height="33dp"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="-6dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/imageView3"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|left"
                        android:linksClickable="true"
                        android:text="@string/contact_us_call_num"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="1"
                        android:id="@+id/textView27"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_alignRight="@+id/imageView3"
                        android:layout_alignEnd="@+id/imageView3"
                        android:layout_marginRight="19dp"
                        android:layout_marginEnd="19dp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:id="@+id/contact_us_llayout2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/imageView6"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="79dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="7dp"
                        android:src="@mipmap/ic_phone1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2"
                        android:id="@+id/textView26"
                        android:layout_marginRight="19dp"
                        android:layout_marginEnd="19dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignBottom="@+id/imageView6"
                        android:layout_alignRight="@+id/imageView6"
                        android:layout_alignEnd="@+id/imageView6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/contact_us_custexp_num"
                        android:id="@+id/contact_us_call2_textview"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/imageView6"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical|left"
                        android:layout_alignBottom="@+id/imageView6"
                        android:layout_alignTop="@+id/imageView6"
                        android:background="@drawable/border" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:id="@+id/contact_us_wapp_llayout">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="88dp"
                        android:layout_height="38dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="20dp"
                        android:padding="7dp"
                        android:src="@mipmap/ic_wapp1" />

                    <TextView
                        android:id="@+id/contact_us_wapp_textview"
                        android:layout_width="316dp"
                        android:layout_height="42dp"
                        android:layout_alignTop="@+id/imageView4"
                        android:layout_alignBottom="@+id/imageView4"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toRightOf="@+id/imageView4"
                        android:background="@drawable/border"
                        android:gravity="center_vertical|left"
                        android:text="@string/contact_us_wapp_num"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:id="@+id/contact_us_site_llayout">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/imageView5"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="82dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="7dp"
                        android:src="@mipmap/ic_link1" />

                    <TextView
                        android:id="@+id/contact_us_website_link"
                        android:layout_width="326dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="-3dp"
                        android:layout_toRightOf="@+id/imageView5"
                        android:gravity="left"
                        android:text="@string/contact_us_website_link"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
