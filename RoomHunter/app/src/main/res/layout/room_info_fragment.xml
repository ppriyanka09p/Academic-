<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RoomInfo"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:nestedScrollingEnabled="false"
    android:outlineProvider="none"
    android:scrollIndicators="none"
    android:touchscreenBlocksFocus="false"
    android:paddingBottom="20dp"
    android:id="@+id/scrollview"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="false"
        android:hapticFeedbackEnabled="false"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please Enter Room Info"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#cd747474"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bedrooms"
            android:id="@+id/title_num_rooms_label"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scrollIndicators="top"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/num_beds_minus"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/add_room_num_of_rooms_label"
                android:layout_alignBottom="@+id/add_room_num_of_rooms_label"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="0dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/ic_sub" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/add_room_num_of_rooms_label"
                android:hint="1"
                android:layout_weight="0.14"
                android:paddingLeft="100dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <ImageView
                android:id="@+id/num_beds_plus"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/add_room_num_of_rooms_label"
                android:layout_alignBottom="@+id/add_room_num_of_rooms_label"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/ic_plus1" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bathrooms"
            android:id="@+id/textView4"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scrollIndicators="top"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/minus_num_baths"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/add_room_num_baths_label"
                android:layout_alignBottom="@+id/add_room_num_baths_label"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:src="@mipmap/ic_sub" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/add_room_num_baths_label"
                android:hint="1"
                android:layout_weight="0.14"
                android:paddingLeft="100dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <ImageView
                android:id="@+id/plus_num_baths"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/add_room_num_baths_label"
                android:layout_alignBottom="@+id/add_room_num_baths_label"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:padding="5dp"
                android:src="@mipmap/ic_plus1" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Toilets"
            android:id="@+id/textView6"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="top"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/minus_num_toilets"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/add_room_num_toilets_label"
                android:layout_alignBottom="@+id/add_room_num_toilets_label"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:src="@mipmap/ic_sub" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/add_room_num_toilets_label"
                android:hint="1"
                android:layout_weight="0.14"
                android:paddingLeft="100dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <ImageView
                android:id="@+id/plus_num_toilets"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/add_room_num_toilets_label"
                android:layout_alignBottom="@+id/add_room_num_toilets_label"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="0dp"
                android:padding="5dp"
                android:src="@mipmap/ic_plus1" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Property Type"
            android:id="@+id/textView9"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="top"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:weightSum="1"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/flat_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@mipmap/ic_flat" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/house_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/flat_imageview"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@mipmap/ic_fullhouse1" />
                </RelativeLayout>

            </LinearLayout>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton android:id="@+id/radio_flat_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat"
                    android:textColor="#666666"
                    android:layout_weight="1"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/radio_fullhouse_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full House"
                    android:textColor="#666666"
                    android:layout_weight="1"
                    android:gravity="center" />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sharing?"
            android:id="@+id/textView18"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="top"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|clip_horizontal|clip_vertical">

                <RadioButton android:id="@+id/radio_sharing_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginRight="50dp" />

                <RadioButton android:id="@+id/radio_sharing_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#666666"
                    android:layout_marginLeft="50dp" />
            </RadioGroup>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_room_step1_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/ic_done_white_48dp"
            app:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

</ScrollView>
